@model IEnumerable<JewelryMaking.Models.BeadListAll>

@{
    ViewBag.Title = "Index";
}
    <style>
        body {
            background-image: url('../../Content/Assets/kazuri4.jpg');
            background-size: cover;
            background-repeat: no-repeat;
        }

        .body-content {
            background-color: white;
