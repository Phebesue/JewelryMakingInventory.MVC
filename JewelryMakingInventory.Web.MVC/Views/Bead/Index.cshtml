@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.BeadId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Type)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Shape)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Color)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LocationId)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.BeadId }/*, new { @class = "btn btn-save" }*/) |
            @Html.ActionLink("Details", "Details", new { id = item.BeadId }/*, new { @class = "btn btn-edit" }*/) |
            @Html.ActionLink("Delete", "Delete", new { id = item.BeadId }/*, new { @class = "btn btn-rmv" }*/)
        </td>
    </tr>
}

</table>