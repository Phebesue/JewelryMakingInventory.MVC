@model IEnumerable<JewelryMaking.Models.BeadSubTotal>

@{
    ViewBag.Title = "IndexTotal";
}
<style>
    body {
        background-image: url('../../Content/Assets/kazuri10.jpg');
        background-size: cover;
        background-repeat: no-repeat;
    }

    .body-content {
        background-color: lavender;
        min-width: 800px;
        max-width: 950px;
    }
</style>
<h2>Bead Total</h2>


<table class="table">
    <thead>
    <tr>
    <th>
        @Html.DisplayNameFor(model => model.BeadId)
    </th>
    <th>
        @Html.DisplayNameFor(model => model.Type)
    </th>
    <th>
        @Html.DisplayNameFor(model => model.Shape)
    </th>
    <th>
        @Html.DisplayNameFor(model => model.Color)
    </th>
    <th>
        @Html.DisplayNameFor(model => model.Quantity)
    </th>
    <th>
        @Html.DisplayNameFor(model => model.Cost)
    </th>
    <th>
        @Html.DisplayNameFor(model => model.SubTotal)
    </th>
    </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.BeadId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Shape)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Color)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cost)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SubTotal)
                </td>

            </tr>
        }
    </tbody>

    <tfoot>
        <tr>
            <td> <b>Grand Total:  </b></td>
            <td>  </td>
            <td>  </td>
            <td>  </td>
            <td>  </td>
            <td>  </td>
            <td> <b>@string.Format("{0:C}", @Model.Sum(e => e.SubTotal))</b></td>
        </tr>
    </tfoot>
</table>

<div>
    @Html.ActionLink("Back to List", "Index", "", new { @class = "btn btn-black" })
</div>