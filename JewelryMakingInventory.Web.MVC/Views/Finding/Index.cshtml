@model IEnumerable<JewelryMaking.Models.FindingListAll>

@{
    ViewBag.Title = "Index";
}
<style>

    body {
        background-image: url('../../Content/Assets/finding9.jpg');
        background-size: cover;
        background-repeat: no-repeat;
    }

    .body-content {
        background-color: white;
        min-width: 800px;
        max-width: 970px;
        border-bottom: 5px solid black;
        border-left: 5px solid black;
        border-right: 5px solid black;
        border-radius: 0px 0px 15px 15px;
    }
    .right {
        float: right;
    }
</style>

<h2>Index of Findings</h2>

<p>
    @Html.ActionLink("Create New Finding", "Create")
</p>
<p class="right">
    @Html.ActionLink("SubTotal Findings", "IndexTotal")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FindingId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Category)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SubType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Color)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FindingId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SubType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Color)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.FindingId }) |
                @Html.ActionLink("Details", "Details", new { id = item.FindingId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.FindingId })
            </td>
        </tr>
    }

</table>