@model IEnumerable<JewelryMaking.Models.SourceListAll>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New Source", "Create")
</p>
<div class="alert alert-success fade in" role="alert">
    @ViewBag.SaveResult
    <button type="button" class="close" data-dismiss="alert">
        <span>&times;</span>
    </button>
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.SourceId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ShowOrLocation)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.SourceId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ShowOrLocation)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.SourceId }) |
            @Html.ActionLink("Details", "Details", new { id = item.SourceId }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.SourceId })
        </td>
    </tr>
}

</table>
